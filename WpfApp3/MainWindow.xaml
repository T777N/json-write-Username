<Window x:Class="WpfApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Sign Up" Height="100" Width="300"
               FontSize="50" Margin="100,10,10,300"></Label>

        <Label Content="Username : " FontSize="30"
               Margin="10,95,604,274"/>

        <TextBox Name="usernameTxb" BorderBrush="Black" 
                 BorderThickness="2" Margin="176,105,304,274"
                 FontSize="20"/>



        <Label Content="Password : " 
               Margin="10,180,604,175" FontSize="30"/>

        <TextBox Name="passwordTxb" BorderBrush="Black" 
                 BorderThickness="2" Margin="176,190,304,188"
                 FontSize="20"/>


        <Label Content="Name : " Margin="10,266,604,93" 
               FontSize="30"/>

        <TextBox Name="nameTxb" BorderBrush="Black"
                 BorderThickness="2" Margin="176,274,304,101"
                 FontSize="20"/>


        <Button
                Margin="561,340,143,31" Content="Next" FontSize="26"
                Background="Aqua" Click="Button_Click"/>

    </Grid>
</Window>
